#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

## Update the path Ruby
export PATH=":$BUILD_DIR/vendor/bin:$BUILD_DIR/bin$PATH"

# Set GEM_HOME to be bundler directory
export GEM_HOME=$BUILD_DIR/vendor/bundle/ruby/2.0.0
export PATH="$GEM_HOME/bin:$PATH"

echo "-----> Running Grunt heroku"
cd $BUILD_DIR
$BUILD_DIR/vendor/node/bin/node $BUILD_DIR/node_modules/grunt-cli/bin/grunt heroku